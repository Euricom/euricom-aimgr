{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react", "typescript", "unicorn"],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "style": "warn"
  },
  "rules": {
    "eqeqeq": "error",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "sort-keys": "off"  ,
    "no-magic-numbers": "off",
    "sort-imports": "off"
  },
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**"
  ]
} 